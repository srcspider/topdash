{
  "compilerOptions": {
    "noEmit": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,

    "preserveConstEnums": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "ES2020",
    "moduleResolution": "Node",
    "module": "CommonJS",

    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "include": ["./src"]
}
